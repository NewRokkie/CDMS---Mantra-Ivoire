# CDMS - Container Depot Management System
# Environment Configuration

# ========================================
# DATABASE CONFIGURATION
# ========================================

# PostgreSQL Database Connection
VITE_DB_HOST=localhost
VITE_DB_PORT=5432
VITE_DB_NAME=cdms_db
VITE_DB_USER=postgres
VITE_DB_PASSWORD=postgres
VITE_DB_SSL=false

# API Backend Configuration
VITE_API_BASE_URL=http://localhost:3001/api

# ========================================
# APPLICATION CONFIGURATION
# ========================================

# Application Settings
VITE_APP_NAME="Container Depot Management System"
VITE_APP_VERSION="1.0.0"
VITE_DEFAULT_LANGUAGE=fr
VITE_DEFAULT_TIMEZONE=Africa/Abidjan

# Development Settings
VITE_DEV_MODE=true
VITE_ENABLE_MOCK_DATA=true
VITE_LOG_LEVEL=debug

# ========================================
# AUTHENTICATION CONFIGURATION
# ========================================

# JWT Settings (for production)
VITE_JWT_SECRET=your-secret-key-here
VITE_JWT_EXPIRATION=24h
VITE_SESSION_TIMEOUT=3600

# ========================================
# DEPOT CONFIGURATION
# ========================================

# Default Yard Settings
VITE_DEFAULT_YARD_ID=a1b2c3d4-e5f6-7890-abcd-ef1234567890
VITE_DEFAULT_YARD_CODE=DEPOT-01

# Container Settings
VITE_MAX_STACK_HEIGHT=5
VITE_DEFAULT_STORAGE_RATE=15.00
VITE_DEFAULT_CURRENCY=XOF
VITE_FREE_DAYS_DEFAULT=2

# ========================================
# FEATURE FLAGS
# ========================================

# Module Enablement
VITE_ENABLE_EDI_MODULE=true
VITE_ENABLE_ANALYTICS_MODULE=true
VITE_ENABLE_BILLING_MODULE=true
VITE_ENABLE_3D_YARD_VIEW=true

# Operational Features
VITE_ENABLE_AUTO_ASSIGNMENT=true
VITE_ENABLE_DAMAGE_TRACKING=true
VITE_ENABLE_MAINTENANCE_SCHEDULING=true

# ========================================
# INTEGRATION CONFIGURATION
# ========================================

# EDI/EDIFACT Settings
VITE_EDI_ENABLED=false
VITE_SFTP_HOST=
VITE_SFTP_PORT=22
VITE_SFTP_USERNAME=
VITE_SFTP_REMOTE_PATH=/edi/outbound

# External APIs
VITE_WEATHER_API_KEY=
VITE_MAPS_API_KEY=
VITE_NOTIFICATION_SERVICE_URL=

# ========================================
# SECURITY CONFIGURATION
# ========================================

# CORS Settings
VITE_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
VITE_ALLOWED_ORIGINS=localhost,127.0.0.1

# File Upload Settings
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# ========================================
# LOGGING AND MONITORING
# ========================================

# Logging Configuration
VITE_LOG_TO_CONSOLE=true
VITE_LOG_TO_FILE=false
VITE_LOG_FILE_PATH=./logs/cdms.log

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# Error Tracking
VITE_ENABLE_ERROR_TRACKING=true
VITE_ERROR_TRACKING_URL=

# ========================================
# DEVELOPMENT SETTINGS
# ========================================

# Development Tools
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_REDUX_DEVTOOLS=true
VITE_ENABLE_REACT_DEVTOOLS=true

# Mock Services
VITE_USE_MOCK_SERVICES=false
VITE_MOCK_API_DELAY=500

# Hot Reload
VITE_HMR_PORT=24678
VITE_HMR_HOST=localhost
